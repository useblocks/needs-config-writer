{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debug Tests",
      "type": "debugpy",
      "request": "launch",
      "purpose": ["debug-test"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Run Sphinx on docs",
      "type": "debugpy",
      "request": "launch",
      "module": "sphinx",
      "args": ["-v", "-b", "html", ".", "_build/html"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/docs",
      "justMyCode": false
    },
  ]
}
